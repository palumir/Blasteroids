<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AIG.blasteroids"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.AIG.blasteroids.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.AIG.blasteroids.GameActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.AIG.blasteroids.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.AIG.blasteroids.MainActivity" />
        </activity>
        <activity
            android:name="com.AIG.blasteroids.Store"
            android:label="@string/title_activity_store"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.AIG.blasteroids.CampaignActivity"
            android:label="@string/title_activity_campaign"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.AIG.blasteroids.Options"
            android:label="@string/title_activity_options"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.AIG.blasteroids.Tutorial"
            android:label="@string/title_activity_tutorial"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
