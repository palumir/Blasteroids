package com.DJG.fd;
import java.util.ArrayList;

public class UnitType {
	
	// Global list of all Unit Types.
	public static ArrayList<UnitType> allUnitTypes = new ArrayList<UnitType>();
	
	public static initUnitTypes() {
		
	}
	
	public UnitType(String newName, String newType, int newWidth, int newHeight) {
		name = newName;
		type = newType;
		
	}
	
    // Unit Type fields. WIP: Seperate into sections when there's lots of values.
	private String name;
	private String type;
	private int width;
	private int height;
 
}