	void playGame() {
		gameThread=new Thread(new Runnable() {
			public void run() {
				while(true){
					Wave.sendWaves();
					updateAllUnits();
					currentView.postInvalidate();
					try {
						Thread.sleep(10);
					}
					catch (Throwable t) {
					}
				}
			}
		});
		gameThread.start();
	}
	
	void updateAllUnits() {
		for(Unit u : allUnits) {
			// Do our unit updates. WIP: This is just movement for now.
			u.moveUnit();
		}
	}

}
